{
  "compilerOptions": {
    // Paths
    "rootDir": "src",
    "outDir": "./dist",

    // Environment
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",

    // Node types
    "lib": ["esnext"],
    "types": ["jest", "node"],

    // Output
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Strict mode
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module behavior
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true,

    // Misc
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests"
  ]
}
